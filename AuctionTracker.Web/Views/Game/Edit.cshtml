@model Game

<h2>Edit Game:</h2>

<form method="post" asp-action="Edit">

    <div class="section">

        <div asp-validation-summary="All" class="text-danger"></div>

        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" style="width:600px" />

        <div class="form-check">
            <input asp-for="Sealed" class="form-check-input" type="checkbox">
            <label class="form-check-label">
                Sealed
            </label>
        </div>

        <label asp-for="Condition"></label>
        <select asp-for="Condition" asp-items="@Model.ConditionList" class="form-control" style="width:200px">
            <option>Please select one</option>
        </select>

        <label asp-for="Platform"></label>
        <select asp-for="Platform" asp-items="@Model.PlatformLst" class="form-control" style="width:200px">
            <option>Please select one</option>
        </select>

        <label asp-for="MediaType"></label>
        <select asp-for="MediaType" asp-items="@Model.MediaLst" class="form-control" style="width:200px">
            <option>Please select one</option>
        </select>

        <label asp-for="Complete"></label>
        <select asp-for="Complete" asp-items="@Model.CompleteLst" class="form-control" style="width:200px">
            <option>Please select one</option>
        </select>

        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" style="width:80px" />

        <label asp-for="Postage"></label>
        <input asp-for="Postage" class="form-control" style="width:80px" />

        <label asp-for="Variant"></label>
        <input asp-for="Variant" class="form-control" style="width:200px" />

        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />

        <input type="hidden" asp-for="@Model.SaleDate" />

    </div>

    <br />

    <button type="submit" class="btn btn-primary">Update</button>

    <br /><br />

    <a asp-controller="Game" asp-action="Index" class="btn btn-primary siteButton">
        <i class="bi bi-chevron-left"></i> Back to list
    </a>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}